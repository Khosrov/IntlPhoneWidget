<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/imv_country_flag"
        android:layout_width="@dimen/flag_default_width"
        android:layout_height="@dimen/flag_default_height"
        android:src="@drawable/country_fr"
        android:contentDescription="@string/item_image_contentDescription"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingEnd="@dimen/spinner_item_default_spacing"
        android:paddingRight="@dimen/spinner_item_default_spacing" />

    <TextView
        android:id="@+id/txv_country_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_preview_country"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintStart_toEndOf="@id/imv_country_flag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingEnd="@dimen/spinner_item_default_spacing"
        android:paddingRight="@dimen/spinner_item_default_spacing"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:id="@+id/txv_country_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorHint"
            android:text="@string/item_preview_dialCode"
            android:layout_marginRight="5dp"
            />
        <TextView
            android:id="@+id/txv_globe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/awf"
            android:text="@string/item_icon_globe"
            android:textColor="@color/colorLightGrayTint"
            />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>